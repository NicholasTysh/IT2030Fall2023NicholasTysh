@model ProductModel

@{
    ViewData["Title"] = "Product Detail";
}


<table class="table table-hover table-responsive">
    <tr>
        <td>Name</td>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <td>Image</td>
        <td><img src="~/images/@Model.ProductImage" class="img-fluid rounded" style="max-width:100px;" /></td>
    </tr>
    <tr>
        <td>Description</td>
        <td>@Model.ProductDescription</td>
    </tr>
    <tr>
        <td>Name</td>
        <td>@Model.ProductPrice.ToString("C2")</td>
    </tr>
</table>
<a asp-controller="Product" asp-action="ListProducts" class="btn btn-primary">Back to List</a>