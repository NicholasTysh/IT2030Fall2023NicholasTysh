@model NickPixPlus.Models.MySession

@{
    ViewData["Title"] = "Tools";
}

<h1>Tools Page</h1>
<div class="row">
    <div class="col-12 col-md-6 justify-content-middle">
        <form asp-action="Tools" method="post">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" readonly>
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" id="LastName" name="LastName" value="@Model?.LastName" readonly>
            </div>
            <div class="form-group">
                <label for="Course">Course</label>
                <input type="text" class="form-control" id="Course" name="Course" value="@Model?.Course" readonly>
            </div>
            <div class="form-group mb-3">
                <label for="FavNum">Favorite Number</label>
                <input type="text" class="form-control" id="FavNum" name="FavNum" value="@Model?.FavNum" readonly>
            </div>
            <span>
                <button type="submit" class="btn btn-primary">Display Session Variables</button>
                <a href="@Url.Action("ClearSession", "Home")" class="btn btn-danger">Clear Values</a>
            </span>
        </form>
    </div>

</div>